<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link
      rel="stylesheet"
      href="./register.css
    "
    />
  </head>
  <body>
    <div class="reg-box">
      <%- include('partials/header') %>

      <h1>welcome to BOREZ Digital security</h1>
      <% if(locals.error) {%>

      <h1 style="color: red"><%=error%></h1>
      <% } %>

      <form action="/register" method="post">
        <label for="company">Company Name</label>
        <input type="company" name="company" id="company" /> <br />
        <br />

        <label for="Email">Email</label>
        <input type="Email" name="Email" id="Email" required /> <br />
        <br />

        <label for="password">Password</label>
        <input type="password" name="password" id="password" /> <br />
        <br />

        <label for="confirm_password">Confirm password</label>
        <input type="password" name="confirm_password" id="confirm_password" />
        <br />
        <br />

        <label for="domain">Domain Name</label>
        <input type="text" name="domain" id="domain" required /> <br />
        <br />

        <label for="num_of_employees">Number of Employees</label>

        <input type="radio" name="num_of_employees" id="below-5" value="1-5" />

        <label for="below-5">Below 5</label>

        <input type="radio" name="num_of_employees" id="5-20" value="5-20" />

        <label for="5-20">Between 5 and 20</label>

        <input
          type="radio"
          name="num_of_employees"
          id="above-20"
          value=" 20-100"
        />
        <label for="above-20">Above 20</label> <br />
        <br />
        <label for="service">Service</label>
        <select name="service" id="service">
          <option value="general">General Digital Security</option>
          <option value="web-security">Web Security</option>
          <option value="training">Employee training</option>
        </select>
        <br />
        <br />

        <label for=" description"> Description</label>
        <br />
        <textarea
          name="description"
          id="description"
          cols="30"
          rows="10"
        ></textarea>
        <br />
        <br />

        <input type="submit" value="Register" />
      </form>
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
